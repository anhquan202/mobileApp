<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogThemGioHang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm đã được thêm vào giỏ hàng của bạn"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:textAllCaps="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tvTongSP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng"
            android:textSize="17sp"
            android:paddingLeft="15dp"
            android:textAllCaps="true"
            android:gravity="center|start"/>
        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingRight="15dp"
            android:gravity="center|end"
            android:text="30000Đ"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <Button
            android:id="@+id/btnXemGioHang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:layout_margin="10dp"
            android:text="Xem giỏ hàng"
            android:textAllCaps="true"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/btnTiepTucMua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CCB9B9"
            android:layout_margin="10dp"
            android:text="Tiếp tục mua"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="15sp"
            />

    </LinearLayout>
</LinearLayout>